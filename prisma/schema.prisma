generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  password  String   @unique
  email     String   @unique
  Image  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // reservation Reservation[]
  // reviews     Reviews[]
  // profile   Profile?
}

model Posts {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  data String
}

