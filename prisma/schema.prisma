generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  username  String    @unique
  password  String    @unique
  email     String    @unique
  Image     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Prompts   Prompts[]
  Chat      Chat[]
  Social     Social[]
}

model Prompts {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  user   User?    @relation(fields: [userId], references: [id])
  userId String
  prompt String
  output String[]
}

model Chat {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  user   User?    @relation(fields: [userId], references: [id])
  userId String
  prompt String
  data   String[]
}

model Social{
   id     String   @id @default(auto()) @map("_id") @db.ObjectId
  user   User?    @relation(fields: [userId], references: [id])
  userId String
  messages  String
}

